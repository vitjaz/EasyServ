<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center">

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_margin="5dp"
        android:id="@+id/not_exit_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/gradient_theme"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorNewPrimary"
        fancy:fb_focusColor="@color/colorAccent"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Остаться"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_iconResource="@drawable/ic_person_white" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:layout_margin="5dp"
        android:id="@+id/exit_button"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/colorNewPrimary"
        fancy:fb_focusColor="@color/colorAccent"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="30dp"
        fancy:fb_text="Выйти"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_iconResource="@drawable/ic_close" />

    </LinearLayout>


</RelativeLayout>