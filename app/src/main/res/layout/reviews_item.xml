<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageReviews"
        android:layout_height="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/NickNameText"
        android:text="123"
        android:layout_below="@id/myReviews"
        android:layout_toRightOf="@id/imageReviews"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/myReviews"
        android:text="123"
        android:layout_toRightOf="@id/imageReviews"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_below="@id/NickNameText"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:id="@+id/timeReviews"
        android:text="time"
        android:layout_toRightOf="@id/imageReviews"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/timeReviews"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

</RelativeLayout>